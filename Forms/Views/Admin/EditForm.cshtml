@model Forms.Models.Form

@{
    ViewData["Title"] = "EditForm";
    Layout = "~/Views/Shared/_yonetimtema.cshtml";
}
<style>
    div {
        table-layout: fixed;
        overflow: hidden;
        text-overflow: Ellipsis;
        Word-wrap: break-Word;
    }
</style>
<h2>Form Düzenle</h2>


<hr />
<div class="row">
    <div class="col-md-12">
        <form asp-action="EditForm" method="post">
            <div asp-validation-summary="All" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="FormId" class="control-label"></label>
                <input asp-for="FormId" class="form-control" />
                <span asp-validation-for="FormId" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="FormName" class="control-label"></label>
                <input asp-for="FormName" class="form-control" />
                <span asp-validation-for="FormName" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="FormUrl" class="control-label"></label>
                <input asp-for="FormUrl" class="form-control" />
                <span asp-validation-for="FormUrl" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Sira" class="control-label"></label>
                <input asp-for="Sira" class="form-control" />
                <span asp-validation-for="Sira" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="Active" class="control-label"></label>

                <select asp-for="Active" class="form-control">
                    <option value="True">Evet </option>
                    <option value="False">Hayır </option>
                </select>
                <span asp-validation-for="Active" class="text-danger"></span>
            </div>

            <div class="form-group">
                <input type="submit" value="Güncelle" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a class="btn btn-gradient-success"asp-action="Forms">Geri</a>
</div>

