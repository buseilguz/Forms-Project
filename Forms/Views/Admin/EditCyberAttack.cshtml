@model Forms.Models.CyberAttack

@{
    ViewData["Title"] = "EditCyberAttack";
    Layout = "~/Views/Shared/_yonetimtema.cshtml";
}
<style>
    div {
        table-layout: fixed;
   
        overflow: hidden;
        text-overflow: Ellipsis;
        Word-wrap: break-Word;
    }
</style>
<h2>Siber Olay Düzenle</h2>


<hr />
<div class="row">
    <div class="col-md-12">
        <form asp-action="EditCyberAttack">
            <div asp-validation-summary="All" class="text-danger"></div>
            <input type="hidden" asp-for="CybetAttackId"/>
            
            
            <div class="form-group">
                <label asp-for="AttackId" class="control-label"></label>
                <select asp-for="AttackId" class="form-control" asp-items="ViewBag.AttackId"></select>
                <span asp-validation-for="AttackId" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="SystemOutage" class="control-label"></label>

                <select asp-for="SystemOutage" class="form-control">
                    <option value="True">Evet </option>
                    <option value="False">Hayır </option>
                </select>
                <span asp-validation-for="SystemOutage" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="StartDate" class="control-label"></label>
                <input asp-for="StartDate" class="form-control" />
                <span asp-validation-for="StartDate" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="DetectionDate" class="control-label"></label>
                <input asp-for="DetectionDate" class="form-control" />
                <span asp-validation-for="DetectionDate" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Description" class="control-label"></label>
                <input asp-for="Description" class="form-control" />
                <span asp-validation-for="Description" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Güncelle" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a class="btn btn-gradient-success" asp-action="CyberAttack">Geri</a>
</div>

