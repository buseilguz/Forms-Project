@model Forms.Models.User

@{
    ViewData["Title"] = "EditUser";
    Layout = "~/Views/Shared/_yonetimtema.cshtml";
}<style>
    div {
        table-layout: fixed;
        overflow: hidden;
        text-overflow: Ellipsis;
        Word-wrap: break-Word;
    }
</style>

<h2>Kullanıcı Düzenle</h2>


<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="EditUser">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="UserId" />

            <div class="form-group">
                <label asp-for="UserName" class="control-label">Kullanıcı Adı</label>
                <input asp-for="UserName" class="form-control" />
                <span asp-validation-for="UserName" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="UserSurname" class="control-label">Kullanıcı Soyadı</label>
                <input asp-for="UserSurname" class="form-control" />
                <span asp-validation-for="UserSurname" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="UserEmail" class="control-label">E-posta</label>
                <input asp-for="UserEmail" class="form-control" />
                <span asp-validation-for="UserEmail" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="UserPhone" class="control-label">İş Telefonu</label>
                <input asp-for="UserPhone" class="form-control" />
                <span asp-validation-for="UserPhone" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="UserMobilePhone" class="control-label">Cep Telefonu</label>
                <input asp-for="UserMobilePhone" class="form-control" />
                <span asp-validation-for="UserMobilePhone" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="UserTask" class="control-label">Ünvanı/Görevi</label>
                <input asp-for="UserTask" class="form-control" />
                <span asp-validation-for="UserTask" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="UserPassword" class="control-label"></label>
                <input asp-for="UserPassword" class="form-control" />
                <span asp-validation-for="UserPassword" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Active" class="control-label"></label>

                <select asp-for="Active" class="form-control">
                    <option value="True">Evet </option>
                    <option value="False">Hayır </option>
                </select>
                <span asp-validation-for="Active" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Authority" class="control-label"></label>

                <select asp-for="Authority" class="form-control">
                    <option value="True">Admin </option>
                    <option value="False">Kullanıcı </option>
                </select>
                <span asp-validation-for="Authority" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Güncelle" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a class="btn btn-gradient-success" asp-action="Users">Geri</a>
</div>

